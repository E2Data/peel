<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="hadoop.hdfs.v1" class="eu.stratosphere.fab.extensions.beans.system.hadoop.HDFS">
        <constructor-arg name="lifespan" value="SUITE"/>
        <constructor-arg name="dependencies">
            <set value-type="eu.stratosphere.fab.core.beans.system.System.System">
            </set>
        </constructor-arg>
    </bean>

    <bean id="hadoop.mapreduce.v1" class="eu.stratosphere.fab.extensions.beans.system.hadoop.Hadoop">
        <constructor-arg name="lifespan" value="EXP_SEQ"/>
        <constructor-arg name="dependencies">
            <set value-type="eu.stratosphere.fab.core.beans.system.System.System">
                <ref bean="hadoop.hdfs.v1"/>
            </set>
        </constructor-arg>
    </bean>

    <bean id="stratosphere.v05" class="eu.stratosphere.fab.extensions.beans.system.stratosphere.Stratosphere">
        <constructor-arg name="lifespan" value="EXP_SEQ"/>
        <constructor-arg name="dependencies">
            <set value-type="eu.stratosphere.fab.core.beans.system.System.System">
                <ref bean="hadoop.hdfs.v1"/>
            </set>
        </constructor-arg>
    </bean>

</beans>